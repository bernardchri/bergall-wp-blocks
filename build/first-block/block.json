{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "create-block/first-block",
  "version": "0.1.0",
  "title": "First Block",
  "category": "widgets",
  "icon": "smiley",
  "description": "Example block scaffolded with Create Block tool.",
  "example": {},
  "supports": {
    "html": false,
    "align": true,
    "anchor": true,
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "source": "text",
      "selector": "div"
    },
    "description": {
      "type": "string",
      "source": "rich-text",
      "selector": "div"
    },
    "message": {
      "type": "string",
      "source": "html"
    },
    "size": {
      "enum": [
        "large",
        "small"
      ]
    }
  },
  "textdomain": "bergall-wp-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}