{
	"apiVersion": 2,
	"name": "animablocks/marquee",
	"title": "Bandeau défilant",
	"icon": "slides",
	"category": "anima",
	"description": "Un bloc de texte défilant avec options de vitesse, direction, rotation et dégradé.",
	"supports": {
		"color": {
			"background": true,
			"text": true
		},
		"spacing": {
			"padding": true,
			"margin": true
		},
		"align": [ "wide", "full" ],
		"html": false,
		"typography": {
			"lineHeight": true
		}
	},
	"attributes": {
		"speed": {
			"type": "number",
			"default": 10
		},
		"link": {
			"type": "string",
			"default": ""
		},
		"direction": {
			"type": "boolean",
			"default": false
		},
		"gradianttransition": {
			"type": "boolean",
			"default": false
		},
		"rotation": {
			"type": "number",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"speed": 10,
			"link": "",
			"direction": "left"
		},
		"innerBlocks": [
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "hello"
				}
			},
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "dolly"
				}
			},
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "world"
				}
			}
		]
	},
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js",
	"style": "file:./style-index.css"
}
